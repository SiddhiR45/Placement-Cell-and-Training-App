<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Spinner Normal State -->
    <item android:state_enabled="true" android:state_pressed="false">
        <layer-list>
            <!-- Bottom layer (pressed state) -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#F2F2F2"/> <!-- Background color -->
                </shape>
            </item>
            <!-- Top layer (normal state) -->
            <item android:top="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent"/>
                    <stroke android:width="1dp" android:color="#BDBDBD"/> <!-- Border color -->
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Spinner Pressed State -->
    <item android:state_enabled="true" android:state_pressed="true">
        <layer-list>
            <!-- Bottom layer (pressed state) -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#E0E0E0"/> <!-- Background color -->
                </shape>
            </item>
            <!-- Top layer (normal state) -->
            <item android:top="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent"/>
                    <stroke android:width="1dp" android:color="#BDBDBD"/> <!-- Border color -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
